{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es6",
      "esnext"
    ],
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": ".",
    "declaration": true,
    "declarationMap": true
  },
  "files": [
    "src/index.ts",
    "src/bin/index.ts"
  ],
  "include": ["tests", "src"]
}
