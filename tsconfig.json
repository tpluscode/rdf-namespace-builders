{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": [
    "src/index.ts",
    "src/loose.ts",
    "src/bin/index.ts"
  ],
  "include": [
    "test", "docs"
  ]
}
