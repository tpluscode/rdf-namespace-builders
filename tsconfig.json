{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "declaration": false,
    "lib": [
      "es6",
      "esnext"
    ],
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "."
  },
  "files": [
    "src/index.ts"
  ],
  "include": ["tests", "build"]
}
